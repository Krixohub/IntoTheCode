<Window x:Class="TestApp.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:IntoTheCodeExample.Expression;assembly=IntoTheCodeExample"
        mc:Ignorable="d"
        Title="TestWindow" Height="800" Width="1200">
    <Grid>
        <TabControl x:Name="Tabs" >
            <TabItem Header="Menu" HorizontalAlignment="Left" Height="20" Margin="0" VerticalAlignment="Top" Width="54">
                <Grid Background="#FFE5E5E5">
                    <StackPanel HorizontalAlignment="Left" Margin="35,40,0,0" VerticalAlignment="Top" Width="133">
                        <Button Content="csv data" Click="btnCsvData_Click" Margin="5" />
                        <Button Content="Expression" Click="btnExpression_Click" Margin="5" />
                        <Button Content="Domain language" Click="btnDomLan_Click" Margin="5" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
